@model Medicard.Services.ViewModels.Doctor.DoctorProfileViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewBag.Title = "Personal info";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="ChangeProfile" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="@this.Model.FirstName">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="@this.Model.LastName">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoctorPicture" class="control-label"></label>
                <input type="file" name="DoctorPicture" class="form-control-file" />
                <span asp-validation-for="DoctorPicture" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<Medicard.Domain.Entities.Enums.Gender>()">
                <option>@Localizer["SelectGender"]</option>
            </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Specialization"></label>
                <input asp-for="Specialization" class="form-control" placeholder="@this.Model.Specialization">
                <span asp-validation-for="Specialization" class="small text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="@this.Model.Age">
                <span asp-validation-for="Age" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber"></label>
                <input asp-for="ContactNumber" class="form-control" placeholder="@this.Model.ContactNumber">
                <span asp-validation-for="ContactNumber" class="small text-danger"></span>
            </div>

            <input class="btn mt-3 text-center" style="background-color:#01ABC2" type="submit" value=@Localizer["Change"] />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}